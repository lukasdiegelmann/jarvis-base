{
	"author": "Oa | 沃地",
	"bin": {
		"@lukasdiegelmann/workspace": "./bin/workspace.js",
		"workspace": "./bin/workspace.js"
	},
	"bugs": {
		"url": "https://github.com/lukasdiegelmann/npm-workspace/issues"
	},
	"dependencies": {
		"@babel/core": "^7.12.10",
		"@babel/plugin-transform-runtime": "^7.12.10",
		"@babel/plugin-transform-typescript": "^7.12.1",
		"@babel/preset-env": "^7.12.11",
		"@babel/preset-typescript": "^7.12.7",
		"@types/blessed": "^0.1.17",
		"@types/chalk": "^2.2.0",
		"@types/webpack-node-externals": "^2.5.0",
		"babel-loader": "^8.2.2",
		"blessed": "^0.1.81",
		"chalk": "^4.1.0",
		"fs": "0.0.1-security",
		"hash-generator": "^0.1.0",
		"json-format": "^1.0.1",
		"path": "^0.12.7",
		"webpack": "^5.10.3",
		"webpack-node-externals": "^2.5.2"
	},
	"description": "A CLI that poses as an meta npm module.",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.10.0",
		"@typescript-eslint/parser": "^4.10.0",
		"eslint": "^7.15.0",
		"eslint-config-prettier": "^7.0.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-prettier": "^3.3.0",
		"prettier": "^2.2.1",
		"typescript": "^4.1.3",
		"webpack-cli": "^4.2.0"
	},
	"eslintConfig": {
		"env": {
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 11,
			"project": "./package.json",
			"projectFolderIgnoreList": [
				"**/dist/**",
				"**/node_modules/**"
			],
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"prettier"
		],
		"rules": {
			"@typescript-eslint/naming-convention": [
				"warn",
				{
					"selector": "default",
					"format": [
						"camelCase"
					]
				},
				{
					"selector": "variable",
					"format": [
						"camelCase",
						"UPPER_CASE"
					]
				},
				{
					"selector": "parameter",
					"format": [
						"camelCase"
					],
					"leadingUnderscore": "allow"
				},
				{
					"selector": "memberLike",
					"modifiers": [
						"private"
					],
					"format": [
						"camelCase"
					],
					"leadingUnderscore": "require"
				},
				{
					"selector": "typeLike",
					"format": [
						"PascalCase"
					]
				}
			],
			"@typescript-eslint/no-var-requires": "off",
			"prettier/prettier": [
				"warn",
				{
					"htmlWhitespaceSensitivity": "strict",
					"jsxBracketSameLine": true,
					"printWidth": 100,
					"tabWidth": 4
				}
			]
		}
	},
	"homepage": "https://github.com/lukasdiegelmann/npm-workspace#readme",
	"keywords": [
		"bootstrap",
		"cli",
		"compilation",
		"configuration",
		"workspace"
	],
	"license": "MIT",
	"name": "workspace",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lukasdiegelmann/npm-workspace.git"
	},
	"scripts": {
		"build": "webpack --config ./webpack.config.js --config-name workspace/production"
	},
	"version": "1.0.0"
}
